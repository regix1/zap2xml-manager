#!/usr/bin/env python3
"""
zap2xml-manager - XMLTV EPG Manager

Executable entry script. Run with: ./zap2xml-manager
"""

import sys
from pathlib import Path

# Add the package to path if running from source
script_dir = Path(__file__).parent.resolve()
if (script_dir / "zap2xml_manager").exists():
    sys.path.insert(0, str(script_dir))

from zap2xml_manager.__main__ import main

if __name__ == "__main__":
    sys.exit(main())
